{
    "name": "@metis-w/design-system",
    "version": "1.0.4",
    "description": "Design system library for Metis projects",
    "type": "module",
    "main": "./dist/index.cjs.js",
    "module": "./dist/index.es.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.es.js",
            "require": "./dist/index.cjs.js"
        },
        "./styles": "./dist/index.css",
        "./styles/*": "./dist/*.css"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
        "dev": "vite build --watch",
        
        "release:patch": "node scripts/release.cjs patch",
        "release:minor": "node scripts/release.cjs minor",
        "release:major": "node scripts/release.cjs major"
    },
    "keywords": [
        "design-system",
        "react",
        "tailwindcss",
        "ui-components"
    ],
    "author": "",
    "license": "ISC",
    "homepage": "https://github.com/metis-w/design-system#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/metis-w/design-system.git"
    },
    "bugs": {
        "url": "https://github.com/metis-w/design-system/issues"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.3.1"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.11",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react": "^4.6.0",
        "autoprefixer": "^10.4.21",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.11",
        "typescript": "^5.8.3",
        "vite": "^6.3.5"
    }
}
