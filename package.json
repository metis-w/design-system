{
    "name": "@metis-w/design-system",
    "version": "1.0.0",
    "description": "Design system library for Metis projects",
    "type": "module",
    "main": "./build/index.cjs",
    "module": "./build/index.js",
    "types": "./build/index.d.ts",
    "exports": {
        ".": {
            "types": "./build/index.d.ts",
            "import": "./build/index.js",
            "require": "./build/index.cjs"
        },
        "./styles": "./build/design-system.css"
    },
    "files": [
        "build"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rimraf build && vite build && tsc --emitDeclarationOnly --project tsconfig.build.json",
        "type-check": "tsc --noEmit",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "keywords": [
        "design-system",
        "react",
        "tailwindcss",
        "ui-components"
    ],
    "author": "metis-team",
    "license": "MIT",
    "homepage": "https://github.com/metis-w/design-system#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/metis-w/design-system.git"
    },
    "bugs": {
        "url": "https://github.com/metis-w/design-system/issues"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0"
    },
    "dependencies": {
        "@fontsource-variable/inter": "^5.2.6",
        "@hookform/resolvers": "^5.1.1",
        "@radix-ui/react-avatar": "^1.1.10",
        "@radix-ui/react-dialog": "^1.1.14",
        "@radix-ui/react-dropdown-menu": "^2.1.15",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-progress": "^1.1.7",
        "@radix-ui/react-select": "^2.2.5",
        "@radix-ui/react-slot": "^1.2.3",
        "@tailwindcss/postcss": "^4.1.11",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.525.0",
        "postcss": "^8.5.6",
        "react-hook-form": "^7.60.0",
        "react-use": "^17.6.0",
        "tailwind-merge": "^3.3.1",
        "vaul": "^1.1.2",
        "zod": "^4.0.5"
    },
    "devDependencies": {
        "@storybook/addon-docs": "^9.0.15",
        "@storybook/addon-onboarding": "^9.0.15",
        "@storybook/react-vite": "^9.0.15",
        "@types/node": "^24.0.10",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react": "^4.6.0",
        "gh-pages": "^6.3.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "rimraf": "^6.0.1",
        "rollup": "^4.44.1",
        "storybook": "^9.0.15",
        "tailwindcss": "^4.1.11",
        "tw-animate-css": "^1.3.5",
        "typescript": "^5.8.3",
        "vite": "^6.3.5"
    }
}
